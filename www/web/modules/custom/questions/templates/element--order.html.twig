<div class="ui-sortable">
</div>
<div class="ui-unsortable">
    {% for option in options %}
    <div class="m-portlet m-portlet--mobile m-portlet--sortable">
        <div class="m-portlet__head ui-sortable-handle">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <div class="custom-control custom-checkbox t-checkbox">
                        <input type="checkbox" class="custom-control-input" id="{{ name }}[{{ loop.index0 }}]" name="{{ name }}[{{ loop.index0 }}]" value="{{ option }}" {% if option in default_value %}checked="true"{% endif %}">
                        <label class="custom-control-label" for="{{ name }}[{{ loop.index0 }}]">{{ option }}</label>
                    </div>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <a href="javascript:;" class="m-portlet__nav-link btn btn-accent m-btn m-btn--icon m-btn--icon-only m-btn--pill js-sort-up">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </li>
                    <li class="m-portlet__nav-item">
                        <a href="javascript:;" class="m-portlet__nav-link btn btn-brand m-btn m-btn--icon m-btn--icon-only m-btn--pill js-sort-down">
                            <i class="fa fa-chevron-down"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
